<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-app" />

    <!-- 注册中心配置 -->
    <dubbo:registry protocol="redis" address="127.0.0.1\:6379"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" accesslog="true"/>

    <!--服务默认参数 -->
    <dubbo:provider timeout="10000" retries="0" filter="providerlogfilter"/>

    <!--暴露基本接口-->
    <dubbo:service interface="me.liuhu.ProviderImpl" ref="operateBigDecimalProvider" version="2.0.0"/>

</beans>